     <script type="text/javascript"> -->
           $("#controldiv").click(function(){

          $("#salavediv").slideDown();

        if(console.log($("#controldiv").val()) == 1){
        $("#salavediv").fadeIn();
         }
               
        else{
            $("#salavediv").fadeOut();     
         }
        })  
             $("#controldiv").click(function(){
              
                    $("#salavediv").slideToggle();
                
                
            })

            animation....

             $("#controldiv").click(function(){
                 $("#animateDiv").animate({
                     height:"100px;",
                     width:"100px;"
                 },5000)
             })
             $("#controldiv").click(function(){
                 $("#animateDiv").stop(); 
            })

            $("#controldiv").click(function(){
                $("#animateDiv").css("background-color","red").fadeOut(2000);
            })

     </script> 